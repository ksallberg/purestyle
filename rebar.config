{require_otp_vsn, "R28"}.

{lib_dirs, ["deps"]}.

{plugins, [rebar3_hex]}.

{erl_opts, [ warnings_as_errors
           , {parse_transform, lager_transform}]}.

{xref_checks, [ undefined_function_calls
              , deprecated_function_calls]}.

{deps, [ {brunhilde, {git, "https://github.com/ksallberg/brunhilde",
                      {tag, "2.0.5"}}}
       , {uuid_erl, "2.0.7"}
       , {lager, "3.9.2"}
       , {erlydtl, "0.14.0"}
       , {jsx, "3.0.0"}
       ]}.
